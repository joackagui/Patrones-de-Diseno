<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SCOREIT" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SCOREIT" parent="Base.Theme.SCOREIT" />

    <style name="Background">
        <item name="android:background">@color/DarkestGray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Foreground">
        <item name="background">@color/CommonRed</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TextoGrande">
        <item name="android:fontFamily">@font/score_it</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TituloDeLaApp">
        <item name="android:text">@string/app_name</item>
        <item name="android:fontFamily">@font/score_it</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BotonesScoreItStyle">
        <item name="android:fontFamily">@font/score_it</item> <!-- Fuente personalizada -->
        <item name="android:textColor">@color/White</item> <!-- Color del texto -->
        <item name="android:textSize">20sp</item>  <!-- Negrita -->
    </style>

    <style name="TextoNormalScoreIt">
        <item name="fontFamily">@font/score_it</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextHintStyle">
        <item name="android:textColorHint">@color/TransparentWhite</item>
        <item name="fontFamily">@font/score_it</item>
    </style>

    <style name="TextoIndicadorDePantalla">
        <item name="android:fontFamily">@font/score_it</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="botones_para_puntos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/CommonRed</item>
    </style>

    <style name="texto_para_puntos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">40dp</item>
        <item name="android:fontFamily">@font/score_it</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="botones_para_puntos_invertido">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/White</item>
    </style>

    <style name="texto_para_puntos_invertido">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">40dp</item>
        <item name="android:fontFamily">@font/score_it</item>
        <item name="android:textColor">@color/CommonRed</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="card_botones">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">170dp</item>
    </style>

</resources>